<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#3A3A3A"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivPdfIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home_white"
            app:tint="@color/green_accent"
            android:contentDescription="PDF Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten_Tai_Lieu.pdf"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvFileDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 01/07/2025"
                android:textColor="#AAAAAA"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kích thước: 1.2 MB"
                android:textColor="#AAAAAA"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnOpenFile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_camera_white"
            app:tint="@android:color/white"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Open File" />

    </LinearLayout>
</androidx.cardview.widget.CardView>